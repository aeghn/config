# File to store and restore.
store() {
    if git_is_dirty; then
        warn "clean this directory first."
        exit 1
    fi
    kcp "/etc/tlp.conf" ./tlp.conf
        
}

restore() {
    kcp ./tlp.conf "/etc/tlp.conf"
}
