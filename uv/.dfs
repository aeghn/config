# File to store and restore.

store() {
    kcp "$HOME/.config/uv/uv.toml" "./uv.toml"
}


restore() {
    for i in *; do
        bak-mv "$HOME/.config/uv/${i##*/}"
        kmap "$i" "$HOME/.config/uv/${i##*/}"
    done
}
