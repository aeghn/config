#!/usr/bin/env bash

set -eu

# Created by dfs

# DFS_DIR := work dir
# LINK_MODE := CP | LN | DEF
# GIT_MANAGED := false | true
#   GIT_DIRTY := false | true

# File to store and restore.

store() {
    die "store not implement, $PWD"
}

restore() {
  if is_msys; then
    local helix_dir="/c/Users/$USER/AppData/Roaming/helix/"
    for i in *; do
      cp  -r "$i" "$helix_dir"
    done
  donot_touch "$helix_dir"
  else
    rm -rf "$HOME/.config/helix"
    ln -sfT "$DFS_DIR" "$HOME/.config/helix"
  fi
}
